<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:layout_margin="@dimen/list_item_spacing">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/default_item_spacing"
            android:background="@color/gradient_dark">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_list_item_folder_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/add_folder_button"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp"/>
            <TextView
                android:id="@+id/tv_list_item_folder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Folder Name"
                android:layout_margin="@dimen/default_item_spacing"
                android:textStyle="bold"
                android:textSize="@dimen/button_text_size"
                android:textColor="@color/white"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>