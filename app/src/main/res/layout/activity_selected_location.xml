<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity"
    android:background="@color/warm_white">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_selected_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white"
        android:background="@drawable/gradient_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tb_selected_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/default_item_spacing"
        app:cardCornerRadius="@dimen/button_radius"
        app:cardElevation="@dimen/cardview_default_elevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/default_item_spacing">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_selected_location_image"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_marginStart="@dimen/default_item_spacing"
                android:layout_marginEnd="@dimen/default_item_spacing"
                android:src="@drawable/image_plaseholder_dark"
                app:civ_border_color="@color/gradient_dark"
                app:civ_border_width="2dp"
                android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tv_selected_location_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="test"
                    android:textStyle="bold"
                    android:textColor="@color/gradient_dark"
                    android:textSize="@dimen/button_text_size"
                    android:gravity="center"
                    android:layout_margin="@dimen/default_item_spacing"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_item_spacing"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/button_radius">
                <TextView
                    android:id="@+id/tv_selected_location_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="this is wehere we started to date"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:textSize="@dimen/button_text_size"
                    android:gravity="center"
                    android:layout_margin="@dimen/default_item_spacing"/>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/bt_show_location"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:backgroundTint="@color/gradient_dark"
                android:text="@string/show_location_text"
                android:layout_weight="1"
                android:layout_margin="@dimen/default_item_spacing"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:elevation="6dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>